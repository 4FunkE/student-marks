<!-- Loop over each object in the ratings array -->
{{#each ratings as |rating| }}
<div class="row mb-4 rating animated fadeIn text-sec bg-link">
  <div class="col-md-10">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->

      <a href="/rating/{{rating.id}}" class="text-white">{{rating.name}}</a>
    </h2>
    <p class="text-white">
      <span for="img" aria-label="apple">🍎</span>
      <span class="teacher-rating">{{selectedValue}}</span>
      out of 5
    </p>
    <p class="text-white">Created by {{rating.user.name}} on {{format_date rating.date_created}}</p>
    <p class="text-white">
      {{rating.description}}
    </p>
     </div>
</div>
{{/each}}
