<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Rate your teacher:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Teacher:</label>
        <select class="form-input" id="project-name" name="project-name">
        <option value="option1">Andrew</option>
        <option value="option2">Will</option>
        <option value="option3">Viviana</option>
        <option value="option4">Emilio</option>
    </select>
      </div>
      <div class="form-group">
      <h3>How many apples?</h3>
      <div class="rating">
        <input type="radio" name="clr" style="--c: #ff0000" />
        <input type="radio" name="clr" style="--c: #ff0000" />
        <input type="radio" name="clr" style="--c: #ff0000" />
        <input type="radio" name="clr" style="--c: #ff0000" />
        <input type="radio" name="clr" style="--c: #ff0000" />
        </div>
    </div>
      <div class="form-group">
        <label for="project-desc">Comments:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
