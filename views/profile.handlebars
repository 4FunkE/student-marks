<div class="row">
  <div class="col-auto">
    <h2 class="text-primary bg-info">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4 bg-primary">
  <div class="col-md-6 text-sec">
    <h3>Rate your teacher:</h3>

    <form class="form new-rating-form">
      <div class="form-group">
        <label for="teacher-name">Teacher:</label>
        <select class="form-input" id="teacher-name" name="teacher-name">
          <option value="Andrew">Andrew</option>
          <option value="Will">Will</option>
          <option value="Viviana">Viviana</option>
          <option value="Emilio">Emilio</option>
        </select>
      </div>

      <div class="form-group">
        <label for="course-title">Course Title:</label>
        <select class="form-input" id="course-title" name="course-title">
          <option value="Mathematics">Mathematics</option>
          <option value="Science">Science</option>
          <option value="English">English</option>
          <option value="History">History</option>
        </select>
      </div>

      <div class="form-group" "animate__animated animate__fadeInUp">
        <h3>How many good apples would you give this teacher?</h3>
        <div class="rating">
          <input type="radio" name="clr" style="--c: #ff0000" value="5" class="animate__animated animate__bounceIn" />
          <input type="radio" name="clr" style="--c: #ff0000" value="4" class="animate__animated animate__bounceIn"  />
          <input type="radio" name="clr" style="--c: #ff0000" value="3" class="animate__animated animate__bounceIn" />
          <input type="radio" name="clr" style="--c: #ff0000" value="2" class="animate__animated animate__bounceIn" />
          <input type="radio" name="clr" style="--c: #ff0000" value="1" class="animate__animated animate__bounceIn" />
        </div>
      </div>
      <script>
        const radioButtons = document.querySelectorAll('input[name="clr"]');
        radioButtons.forEach(function(radioButton) {
        radioButton.addEventListener('change', function() { if (this.checked) {
        const selectedValue = this.value; localStorage.setItem('selectedValue',
        selectedValue); console.log("Selected value:", selectedValue); } }); });
      </script>
      <div class="form-group">
        <label for="rating-desc">Comments:</label>
        <textarea
          class="form-input"
          id="rating-desc"
          name="rating-desc"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary animate__animated animate__heartBeat">Post</button>
      </div>
    </form>
  </div>

  {{#if ratings.length}}
    <div class="col-md-6 rating-list">
      <h3>Current Ratings:</h3>

      {{#each ratings as |rating|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/rating/{{rating.id}}">{{rating.name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{rating.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>